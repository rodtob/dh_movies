<!DOCTYPE html>
<html>
<%-include('partials/head') %> 
  <body>
    <body>
      <form action="/movies/edit?_method=PUT" method="POST">
        <label for="">Title</label>
        <input type="text" name="title" value="<%= peli.title %> ">
        <label for="">Rating</label>
        <input type="text" name="rating" value="<%= peli.rating %> ">
        <label for="">Awards</label>
        <input type="number" name="awards" value="<%= peli.awards %> ">
        <label for="">Fecha de estreno</label>
        <input type="date" name="release_date" value="<%= peli.release_date %> ">
        <label for="">Duración</label>
        <input type="text" name="length" value="<%= peli.length %> ">
        <label for="">Género</label>
        <select name="genre_id">
          <% generos.forEach(genero => { %>
            <% if (peli.genre_id === genero.id) { %>
              <option value="<%= genero.id %> " selected>
              <%= genero.name %> </option>
              <%} else { %>
                <option value="<%= genero.id %> "> <%= genero.name %> </option> 
          <% }}) %>
        </select>
  
        <label for="">Actores</label>
        <select name="actores" multiple>
          <% actores.forEach(actor => { %>
            <% if(peli.actorPelicula.some(actorPelicula => actorPelicula.id == actor.id)) { %> 
              <option value="<%= actor.id %> " selected>
              <%= actor.first_name  + ' ' + actor.last_name %></option>
              <% } else { %>
                <option value="<%= actor.id %> ">
                  <%= actor.first_name  + ' ' + actor.last_name %></option>
                <% } %> 
          <% }) %>
        </select>
  
        <input type="submit" value="Modificá tu peli">
      </form>
        <%-include('partials/footer') %> 
    </body>
      <%-include('partials/footer') %> 
  </body>
</html>
